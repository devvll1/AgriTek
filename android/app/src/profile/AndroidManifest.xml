<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yourapp">

    <!-- Internet Permission (required for network communication) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location Permissions -->
    <!-- Fine location for precise GPS access -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Coarse location for approximate location access -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Notification Permission (required for Android 13 and above) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Camera Permission (optional: if your app requires camera access) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Write External Storage Permission (if saving files to the device) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <!-- Read External Storage Permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Vibration Permission (optional: if your app uses vibration feedback) -->
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
